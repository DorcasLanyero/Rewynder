<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/card_procedure_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:background="@color/brandBackground"
    android:padding="1dp">
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/white">
        <com.rewyndr.rewyndr.view.SquareImageView
            android:id="@+id/card_procedure_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/card_procedure_header"
        android:padding="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/card_procedure_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/card_procedure_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/brandLightBackground"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/card_procedure_handle"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_drag_handle_black_24dp"/>
    </LinearLayout>
</LinearLayout>