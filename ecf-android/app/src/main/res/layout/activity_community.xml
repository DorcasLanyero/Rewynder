<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.rewyndr.rewyndr.activity.CommunityActivity"
        tools:ignore="MergeRootFrame" >
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/pull_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">
                    <LinearLayout
                        style="@style/ContentContainer"
                        android:id="@+id/community_details_container">
                        <LinearLayout
                            style="@style/ContentHeader"
                            >
                            <TextView
                                style="@style/ContentHeading"
                                android:text="@string/community_details_heading"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/ContentBody"
                            android:paddingBottom="0dp">
                            <LinearLayout
                                style="@style/ContentDetailContainer"
                                android:id="@+id/community_location_container"
                                android:visibility="gone">
                                <TextView
                                    style="@style/ContentDetailLabel"
                                    android:text="@string/community_location_label"/>
                                <TextView
                                    style="@style/ContentDetailValue"
                                    android:id="@+id/community_location"/>
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ContentDetailContainer"
                                android:id="@+id/community_machine_number_container"
                                android:visibility="gone">
                                <TextView
                                    style="@style/ContentDetailLabel"
                                    android:text="@string/community_machine_number_label"/>
                                <TextView
                                    style="@style/ContentDetailValue"
                                    android:id="@+id/community_machine_number"/>
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ContentDetailContainer"
                                android:id="@+id/community_description_container"
                                android:visibility="gone">
                                <TextView
                                    style="@style/ContentDetailLabel"
                                    android:text="@string/community_description_label"/>
                                <TextView
                                    style="@style/ContentDetailValue"
                                    android:id="@+id/community_description"
                                    android:autoLink="web"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/community_procedures_container"
                        style="@style/ContentContainer">
                        <LinearLayout
                            style="@style/ContentHeader">
                            <TextView
                                style="@style/ContentHeading"
                                android:text="@string/community_procedures_heading"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/ContentBody"
                            android:paddingBottom="0dp">
                            <TextView
                                style="@style/ContentDetailValue"
                                android:id="@+id/community_no_procedures"
                                android:text="@string/community_no_procedures"/>
                            <com.woxthebox.draglistview.DragListView
                                android:id="@+id/community_procedures_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>
    <include
        android:id="@+id/side_menu"
        layout="@layout/_side_menu" />
</androidx.drawerlayout.widget.DrawerLayout>